<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
        >

    <bean id="christmas2014" class="org.boris.xlloop.util.Day">
        <constructor-arg index="0" value="2014"/>
        <constructor-arg index="1" value="12"/>
        <constructor-arg index="2" value="25"/>
    </bean>

    <bean id="newYear2015" class="org.boris.xlloop.util.Day">
        <constructor-arg index="0" value="2015"/>
        <constructor-arg index="1" value="01"/>
        <constructor-arg index="2" value="01"/>
    </bean>

    <bean id="holidayList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="christmas2014"/>
                <ref bean="newYear2015"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="defaultWeekendDaysList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="saturday"/>
                <ref bean="sunday"/>

            </list>
        </constructor-arg>
    </bean>

    <util:constant id="sunday" static-field="org.threeten.bp.DayOfWeek.SUNDAY"/>
    <util:constant id="saturday" static-field="org.threeten.bp.DayOfWeek.SATURDAY"/>


    <bean id="usHolidaysCalendar" class="com.anand.analytics.isdamodel.date.USHolidayCalendar">
        <constructor-arg index="0" ref="holidayList"/>
        <constructor-arg index="1" ref="defaultWeekendDaysList"/>
    </bean>

</beans>