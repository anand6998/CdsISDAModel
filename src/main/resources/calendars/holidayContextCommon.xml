<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
        >
    <bean id="holidayListReader" class="com.anand.analytics.isdamodel.date.HolidayListReader"></bean>
    <bean id="holidayCalendarFunctions" class="com.anand.analytics.isdamodel.date.HolidayCalendarFunctions"/>

    <util:constant id="friday" static-field="org.threeten.bp.DayOfWeek.FRIDAY"/>
    <util:constant id="sunday" static-field="org.threeten.bp.DayOfWeek.SUNDAY"/>
    <util:constant id="saturday" static-field="org.threeten.bp.DayOfWeek.SATURDAY"/>
    </beans>
