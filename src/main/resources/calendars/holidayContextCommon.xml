<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
        >
    <bean id="holidayListReader" class="com.anand.analytics.isdamodel.date.HolidayListReader"></bean>
    <bean id="holidayCalendarFunctions" class="com.anand.analytics.isdamodel.date.HolidayCalendarFunctions"/>

    <util:constant id="monday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.MON"/>
    <util:constant id="tuesday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.TUE"/>
    <util:constant id="wednesday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.WED"/>
    <util:constant id="thursday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.THU"/>
    <util:constant id="friday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.FRI"/>
    <util:constant id="saturday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.SAT"/>
    <util:constant id="sunday" static-field="com.anand.analytics.isdamodel.date.DayOfWeek.SUN"/>

    </beans>
